@model BudgetViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="modal-content">
    <div class="modal-container">

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InsertTransaction.TransactionName" class="control-label"></label>
                        <input asp-for="InsertTransaction.TransactionName" class="form-control" />
                        <span asp-validation-for="InsertTransaction.TransactionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InsertTransaction.Amount" class="control-label"></label>
                        <input asp-for="InsertTransaction.Amount" class="form-control" />
                        <span asp-validation-for="InsertTransaction.Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="InsertTransaction.CategoryID" class="control-label"></label>
                        <select asp-for="InsertTransaction.CategoryID" class ="form-control">
                            <option></option>
                            @foreach (var category in Model.InsertTransaction.Categories)
                            {
                                <option value="@category.CategoryId">@category.Title</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="InsertTransaction.Date" class="control-label"></label>
                        <input asp-for="InsertTransaction.Date" class="form-control" />
                        <span asp-validation-for="InsertTransaction.Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>