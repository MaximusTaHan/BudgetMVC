@model BudgetViewModel

<div class="modal-content">
    <div class="modal-container">
        <form asp-action="Create" asp-controller="Categories" id="insert-category-form" method="post" class="form-horizontal" role="form">

            <div class="row justify-content-center">
                <div class="col-xl-6 form-floating col-lg-8 col-md-8 col-sm-10">
                    <input asp-for="InsertCategory.CategoryId" type="hidden" class="form-control" />
                    <input asp-for="InsertCategory.CategoryName" class="form-control" />
                    <label asp-for="InsertCategory.CategoryName" class="form-label"></label>
                    <span asp-validation-for="InsertCategory.CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 mt-3 mb-5">
                    <input type="submit" id="addCategoryBtn" class="btn btn-success form-button" value="Add Category" />
                </div>
            </div>

        </form>
    </div>
</div>